{{#if listExists}}
    <ul>
        {{#each productos}}
            <div class="row align-items-center" style="background-color:#aaa">
                <div class="col w-25 p-3"><h4>{{this.title}}</h4></div>
                <div class="col w-25 p-3"><h4>{{this.price}}</h4></div>
                <div class="col w-50 p-3"><img src= {{this.thumbnail}} style="max-width:50px"></div>
            </div>
        {{/each}}
    </ul>
{{else}}
<div class="row align-items-center" style="background-color:#aaa">
    <h1>No hay productos</h1>
</div>
{{/if}}